.main-content-wrap
  height calc(100vh - 64px)
  overflow-y auto
  overflow-x hidden
  .title
    margin-top: 36px;
    margin-left: 24px;
    .title-style
      color: #030303
      font-size: 25px;
      font-weight: 500;
  .video-item-wrap
    margin: 16px 15px
    .duration
      position: absolute;
      bottom: 0;
      right: 0;
      margin: 4px;
      color: var(--yt-spec-static-brand-white);
      background: #2a1d16
      color: #f1f1f1
      padding: 2px 4px;
    .video-description-wrap
      display: flex
      .photo-user
        border-radius: 50%;
        overflow: hidden;
        height 36px
        width 36px
        margin-top: 12px 
        margin-right: 12px
      .metadata
        flex: 1
        padding-right: 24px
        .video-title
          flex: 1
          font-weight: 500
          color: #212121
          margin-top: 12px
          margin-bottom: 6px
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
          line-height: 20px;
          max-height: 40px;
      .button
        margin-top: 12px
        font-size: 18px
        cursor: pointer;
        &:hover
          color: #212121
          transition: all .5s
          background: #f0f2f5
        
