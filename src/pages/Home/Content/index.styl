.main-content-wrap
  height calc(100vh - 64px)
  overflow-y auto
  overflow-x hidden
  .title
    margin-top 36px
    margin-left 24px
    .title-style
      color #030303
      font-size 25px
      font-weight 500
  .video-item-wrap
    cursor pointer
    margin 16px 15px
    .video-duration-wrap
      position relative
      .duration
        position absolute
        bottom 0
        right 0
        margin 4px
        background #2a1d16
        color #f1f1f1
        padding 2px 4px
        cursor pointer
    .video-description-wrap
      display flex
      .photo-user
        border-radius 50%
        overflow hidden
        height 36px
        width 36px
        margin-top 12px 
        margin-right 12px
        cursor pointer
      .metadata
        flex 1
        padding-right 24px
        .video-title
          flex 1
          font-weight 500
          color #212121
          margin-top 12px
          margin-bottom 6px
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 2
          line-height 20px
          max-height 40px
          cursor pointer
        .video-description
          cursor pointer
      .button
        margin-top 12px
        font-size 18px
        cursor pointer
        display none
        &:hover
          color #212121
          transition all .5s
          background #f0f2f5
          height 20px
       
  .video-item-wrap:hover
    .button
      display block
  .video-description-view
    display flex
    overflow hidden
    text-overflow ellipsis
    line-height 20px
    max-height 40px
  .dots
    width 4px
    height 4px
    background  #878787
    border-radius 5px
    margin 7px 4px