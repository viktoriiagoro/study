.Header
  width 100%
  height 460px
  background #4b4a45
  margin-bottom 30px
  background-image url(/public/img/hero-1.jpg)
  background-size 100% 100%
  margin auto
  .header-top
    display flex
    justify-content space-between
    .letter
      color #f1f1f1 
      cursor pointer
      font-size 25px
      .span
        font-weight bold
    .menu
      display flex
      padding-top 15px
      .menu-item
        padding-left 20px
        color #f1f1f1 
        cursor pointer
        &hover
          color gray
  .header-bottom
    padding-top 15px
    display flex
    .menu-left
      padding-right 100px
      padding-top 60px
      color #f1f1f1 
      font-size 35px
      font-weight bold
      .p
        font-size 25px
        font-weight normal
      .button
        background #40babd
        color #f1f1f1 
        border none
        border-radius 5px
        padding 15px 30px
    .figure-holder
      position relative;
      height 300px;
    .figure 
      width 520px;
      bottom inherit;
      top 130px;
    img 
      padding-left 30px
      width 25%
      padding-top 30px
      overflow hidden
  .container
    display flex
    justify-content center
    .dot-1
      background #40babd
      height 12px
      width 12px
      margin-left 2px
      margin-right 5px
      border-radius 50%
      cursor pointer
    .dot
      background #b2b2b2
      height 12px
      width 12px
      margin-left 2px
      margin-right 5px
      border-radius 50%
      cursor pointer