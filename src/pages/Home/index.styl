.home
  .header
    width 100%
    height 500px
    // background: #4b4a45
    margin-bottom: 30px
    padding: 15px 200px 15px 200px
    background-image: url(/public/img/hero-1.jpg)
    background-size 100% 100%
    .header-top
      display: flex
      justify-content: space-between
      .letter
        color #f1f1f1 
        cursor: pointer
        font-size: 25px
        .span
          font-weight: bold
      .menu
        display: flex
        padding-top: 15px
        .menu-item
          padding-left: 20px
          color #f1f1f1 
          cursor: pointer
          &:hover
            color gray
    .header-bottom
      padding-top: 15px
      display: flex
      .menu-left
        padding-right: 100px
        padding-top: 60px
        color: #f1f1f1 
        font-size: 35px
        font-weight: bold
        .p
          font-size: 25px
          font-weight: normal
        .button
          background: #40babd;
          color: #f1f1f1 
          border: none
          border-radius: 5px
          padding: 15px 30px
      img 
        padding-left: 30px
        width: 35%
        padding-top: 60px
        overflow: hidden;
    .container
      display: flex
      justify-content: center
      margin-top: 70px

      .dot
        background: #3fbabd
        height 10px
        width: 10px
        margin-left: 10px
        margin-right: 10px
        border-radius: 50%
        cursor: pointer


    